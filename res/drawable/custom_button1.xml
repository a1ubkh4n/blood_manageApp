<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:centerColor="#3b3851"
                android:endColor="#3b3851"
                android:startColor="#3b3851" />
            <corners android:radius="5dp" />
            <stroke
                android:width="2dp"
                android:color="#3b3851" />
            <padding
                android:bottom="5dp"
                android:left="15dp"
                android:right="15dp"
                android:top="5dp" />
        </shape>

    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:centerColor="#625d84"
                android:endColor="#625d84"
                android:startColor="#625d84" />
            <corners android:radius="5dp" />
            <stroke
                android:width="4dp"
                android:color="#625d84" />
            <padding
                android:bottom="5dp"
                android:left="15dp"
                android:right="15dp"
                android:top="5dp" />
        </shape>
    </item>

</selector>